---
/**
 * VTracer WASM - Main Page Layout
 * 
 * Astro page component that provides the PWA shell with:
 * - Comprehensive PWA meta tags and manifest links
 * - Install banner and offline indicators
 * - Update notifications for service worker changes
 * - Responsive layout with Tailwind CSS
 */
import App from '../components/App.svelte';
import '../styles/global.css';
import pwaInitSrc from '../scripts/pwa-init.ts?url';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content="Free offline image to SVG converter. Convert raster images to vector graphics entirely in your browser using WebAssembly. No uploads, complete privacy. Works offline!" />
    <meta name="keywords" content="image to svg, vector converter, svg converter, raster to vector, image tracing, vtracer, wasm, offline, pwa" />
    <meta name="author" content="VTracer WASM" />
    <meta name="theme-color" content="#188F54" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#188F54" media="(prefers-color-scheme: light)" />
    <meta name="color-scheme" content="dark" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="VTracer" />
    <meta name="application-name" content="VTracer WASM" />
    <meta name="msapplication-TileColor" content="#000000" />
    <meta name="msapplication-config" content="none" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="VTracer WASM - 100% Client-Side Image to SVG" />
    <meta property="og:description" content="Free offline image to SVG converter. Convert raster images to vector graphics entirely in your browser. No uploads, complete privacy." />
    <meta property="og:image" content="/vtracer-wasm/VTRacer-WASM-Full.jpeg" />
    <meta property="og:url" content="https://jarettrude.github.io/vtracer-wasm/" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" type="image/svg+xml" href="/vtracer-wasm/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/vtracer-wasm/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/vtracer-wasm/favicon-16x16.png" />
    <link rel="shortcut icon" href="/vtracer-wasm/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/vtracer-wasm/apple-touch-icon.png" />
    <link rel="mask-icon" href="/vtracer-wasm/VTRacer-WASM-Square-Black.svg" color="#188F54" />
    <link rel="manifest" href="/vtracer-wasm/site.webmanifest" crossorigin="use-credentials" />
    
    <title>VTracer WASM - 100% Client-Side Image to SVG</title>
  </head>
  <body class="min-h-screen text-gray-100 bg-black">
    <div class="w-full max-w-[3840px] mx-auto px-4">
      <App client:load />
    </div>
    <div id="pwa-install-banner" class="hidden fixed bottom-4 left-4 right-4 md:left-auto md:right-4 md:w-80 bg-slate-900 border border-emerald-700 rounded-lg p-4 shadow-xl z-50">
      <div class="flex items-start gap-3">
        <img src="/vtracer-wasm/android-chrome-192x192.png" alt="VTracer" class="w-12 h-12 rounded-lg" />
        <div class="flex-1">
          <h3 class="text-white font-semibold text-sm">Install VTracer WASM</h3>
          <p class="text-slate-400 text-xs mt-1">Install for offline access and faster loading</p>
        </div>
        <button id="pwa-install-close" class="text-slate-500 hover:text-white" aria-label="Close">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex gap-2 mt-3">
        <button id="pwa-install-btn" class="flex-1 bg-emerald-600 hover:bg-emerald-500 text-white text-sm font-medium py-2 px-4 rounded transition-colors">
          Install
        </button>
        <button id="pwa-install-later" class="px-4 py-2 text-slate-400 hover:text-white text-sm transition-colors">
          Later
        </button>
      </div>
    </div>
    <div id="offline-indicator" class="hidden fixed top-4 right-4 w-[75%] max-w-4xl bg-emerald-700 text-white py-2 text-sm font-medium z-50 rounded-l-full rounded-r-lg shadow-lg border border-emerald-500/60">
      <div class="px-4 flex items-center justify-between gap-3">
        <span class="text-center flex-1">You're offline â€” VTracer still works!</span>
        <div class="flex items-center gap-2">
          <button id="offline-minimize" class="rounded-full bg-emerald-800/70 hover:bg-emerald-800 text-white text-xs px-3 py-1 transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white" aria-label="Minimize offline banner">
            Minimize
          </button>
          <button id="offline-close" class="shrink-0 text-white/80 hover:text-white focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white" aria-label="Dismiss offline banner">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
    <div id="offline-pill" class="hidden fixed bottom-4 right-4 bg-emerald-700 text-white text-sm font-medium px-3 py-2 rounded-full shadow-lg z-50 items-center gap-2 border border-emerald-500/60">
      <span>Offline</span>
      <button id="offline-pill-expand" class="text-white/80 hover:text-white focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white" aria-label="Expand offline details">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 9l6 6 6-6" />
        </svg>
      </button>
    </div>
    <div id="update-banner" class="hidden fixed bottom-4 left-4 right-4 md:left-auto md:right-4 md:w-80 bg-slate-900 border border-sky-600 rounded-lg p-4 shadow-xl z-50">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-sky-600 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="text-white font-semibold text-sm">Update Available</h3>
          <p class="text-slate-400 text-xs mt-1">A new version is ready</p>
        </div>
      </div>
      <button id="update-btn" class="w-full mt-3 bg-sky-600 hover:bg-sky-500 text-white text-sm font-medium py-2 px-4 rounded transition-colors">
        Update Now
      </button>
    </div>
    <script type="module" src={pwaInitSrc}></script>
  </body>
</html>
